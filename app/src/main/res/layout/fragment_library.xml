<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/text_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="asdasda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewfirst"
        android:text="Playlist"/>
    <TextView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist"
        android:text="History"
        />
    <TextView
        android:id="@+id/albums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history"
        android:text="Albums"
        />
    <View
        android:id="@+id/v_divider_line_one"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/playlist"
        app:layout_constraintBottom_toBottomOf="@id/v_divider_line_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/button_next"
        app:layout_constraintBottom_toBottomOf="@id/playlist"
        app:layout_constraintTop_toTopOf="@id/v_divider_line_one"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/playlist"
        app:layout_constraintBottom_toBottomOf="@id/playlist"
        app:layout_constraintTop_toTopOf="@id/v_divider_line_one"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />

    <View
        android:id="@+id/v_divider_line_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/history"
        app:layout_constraintBottom_toBottomOf="@id/v_divider_line_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/button_next"
        app:layout_constraintBottom_toBottomOf="@id/history"
        app:layout_constraintTop_toTopOf="@id/v_divider_line_two"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/history"
        app:layout_constraintBottom_toBottomOf="@id/history"
        app:layout_constraintTop_toTopOf="@id/v_divider_line_two"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />

    <View
        android:id="@+id/v_divider_line_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/albums"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/button_next"
        app:layout_constraintBottom_toBottomOf="@id/albums"
        app:layout_constraintTop_toTopOf="@id/v_divider_line_three"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/album"
        app:layout_constraintBottom_toBottomOf="@id/albums"
        app:layout_constraintTop_toTopOf="@id/v_divider_line_three"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/viewfirst"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_library"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albums"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/recently"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recently_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:tag="sticky|-hastransparancy"
                android:text="Recently played"
                android:textColor="@android:color/black"
                android:textSize="@dimen/header1_text_size"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recently_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_song_playlist"
                tools:orientation="horizontal"
                tools:layoutManager="LinearLayoutManager"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
